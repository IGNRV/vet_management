<odoo>
    <data>

        <record id="allergy_tree_view" model="ir.ui.view">
            <field name="name">animal.allergy.tree</field>
            <field name="model">animal.allergy</field>
            <field name="arch" type="xml">
                <tree string="Alergias">
                    <field name="name"/>
                    <field name="allergy_type"/>
                    <field name="severity"/>
                </tree>
            </field>
        </record>

        <record id="allergy_form_view" model="ir.ui.view">
            <field name="name">animal.allergy.form</field>
            <field name="model">animal.allergy</field>
            <field name="arch" type="xml">
                <form string="Alergia">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="allergy_type"/>
                            <field name="severity"/>
                            <field name="description"/>
                            <field name="symptoms"/>
                            <field name="treatment"/>
                            <field name="animal_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="allergy_action" model="ir.actions.act_window">
            <field name="name">Alergias</field>
            <field name="res_model">animal.allergy</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="allergy_tree_view"/>
        </record>
    </data>
</odoo>
